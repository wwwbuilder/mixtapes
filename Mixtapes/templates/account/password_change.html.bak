{% extends "index.html" %}

{% load i18n %}
{% block head_title %}{% trans "Change Password" %}{% endblock %}

{% block pagetitle %}
  <title>Change Password // 24/7Mixtapes</title>
  {% endblock pagetitle %}
{% block content %}

<div class="container">

    <div class="row">

        <div class="col-md-10" style="padding: 56px;margin-left: 75px;">

            <h1 class="header-box">Change Password</h1>
    <form method="POST" action="" class="password_change form-horizontal" >
        {% csrf_token %}
           <div class="form-group  has-feedback">
              <label for="id_oldpassword" class="col-sm-3 control-label">Current Password:</label>
               <div class="col-sm-6">
                 <input id="id_oldpassword" name="oldpassword" placeholder="Password" type="password" class=" form-control"  />
               </div>
               </div>
             <div class="form-group  has-feedback">
                <label for="id_password1" class="col-sm-3 control-label">New Password:</label>
                 <div class="col-sm-6">
                   <input id="id_password1" name="password1" placeholder="Password" type="password" class=" form-control" />
                 </div>
             </div>
             <div class="form-group  has-feedback">
                <label for="id_password2" class="col-sm-3 control-label" >New Password (again):</label>
                 <div class="col-sm-6">
                  <input id="id_password2" name="password2" placeholder="Password" type="password" class=" form-control" />
                </div>
              </div>
              <div class="form-group  has-feedback">
                <label class="col-sm-3 control-label"></label>
                 <div class="col-sm-6">
                  <button type="submit" name="action" class="btn btn-block btn-warning btn-success">{% trans "Change Password" %}</button>
                 </div>
                </div>
    </form>
    </div>
    </div>
    </div>
{% endblock %}
